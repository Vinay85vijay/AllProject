package com.hello;

import java.util.ArrayList;
import java.util.List;

public class Each_ItirationSum {

	public static void main(String[] args) {
	 int arr[]= {3,2,1,10,2};
	 List <Integer>list = new ArrayList<>();
	 int sum=arr[0];
	 for(int i=1;i<arr.length;i++) {
		 sum+=arr[i];
		 list.add(sum);
	 }
	 System.out.println(list);

	}

}
