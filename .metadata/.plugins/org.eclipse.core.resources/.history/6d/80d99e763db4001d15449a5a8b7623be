int arr[];
static int j;
	public static void main(String[] args) {
		int arr[]= {2, 5, 6, 11, 9, 13, 14, 12};
		int element =9;
		int store =0;
		Arrays.sort(arr);
		for (int i : arr) {
		 if(element<i) {
			 store=i;
		 }
	//	 System.out.println(store);
		}
		if(store%2==0) {
			System.out.println(store);
		}
		
		
		
		

	}

}
